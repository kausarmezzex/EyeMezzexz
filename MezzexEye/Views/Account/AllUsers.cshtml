@using MezzexEye.ViewModel 

<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Active</th>
            <th>Country</th>
            <th>Phone Number</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Gender</td>
                <td>@user.Active</td>
                <td>@user.CountryName</td>
                <td>@user.Phone</td>
               
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

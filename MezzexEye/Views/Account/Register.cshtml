@model MezzexEye.ViewModel.RegisterViewModel

<h2 class="text-center mt-4">Register</h2>

<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Active" type="checkbox" class="form-check-input" />
                <label asp-for="Active" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-select">
                    <option value="Registered">Registered</option>
                    <option value="ForumModerator">Forum Moderators</option>
                    <option value="Guest">Guest</option>
                    <option value="Vendors">Vendors</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-4">Register</button>
        </form>
    </div>
</div>

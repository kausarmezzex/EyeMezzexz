@model EyeMezzexz.Models.TeamAssignmentViewModel

<h2>Assign User to Team</h2>

<form asp-action="AssignUserToTeam" method="post">
    <div class="form-group">
        <label asp-for="SelectedTeamId">Select Team</label>
        <select asp-for="SelectedTeamId" asp-items="Model.Teams" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="SelectedUserId">Select User</label>
        <select asp-for="SelectedUserId" asp-items="Model.Users" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="SelectedCountryId">Select Country</label>
        <select asp-for="SelectedCountryId" asp-items="Model.Countries" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Assign</button>
</form>
